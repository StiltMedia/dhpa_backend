= render "layouts/admin/nav"
.container
  %h5 Orders
  - @orders.each do |order|
    %li
      = link_to purchase_path(order) do
        = "#{order.created_at.strftime("%A, %b %d %Y")} - #{order.user.present? ? order.user.email : "NO USER"} - #{number_to_currency calculate_subtotal(order, dollars: true)}"
  %br