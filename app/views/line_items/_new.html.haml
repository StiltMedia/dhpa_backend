#item-options-tab.tab-container
  / %ul
  /   %li.tab
  /     %a{id: "digital", :href => "#"} DIGITAL DOWNLOAD
  /   %li.tab
  /     %a{id: "physical", :href => "#"} PHYSICAL PRINT

  %br
  = form_for LineItem.new do |f|
    = f.hidden_field :photo_id, value: @photo.id
    = f.fields_for :delivery_option, DeliveryOption.new do |delivery_option|
      #digital-form-elements

        = delivery_option.hidden_field :option_type, value: "digital"

        = delivery_option.label :license, "LICENSE:"
        = delivery_option.select :license, options_for_select(options_for_license)
        %br
        = f.submit "Add to Cart", class: :button
        
        %p
          %h4.page-title
            To order prints, please email
            %a{href: "mailto:support@dhpa.com"} support@dhpa.com